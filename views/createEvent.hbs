    <link rel="stylesheet" href="/style.css">
    <title>Create An Event</title>
</head>
<body>
    <nav>
        <h4>Create An Event</h4>
        <ul>
            <li><a href="/admin"> Back to Admin Home </a></li>
            <li><a href= "/"> Donor Queue </a></li>
            <li><a href="/"> Request Queue </a></li>
            <li><a href="/"> Logout </a></li>
        </ul>
    </nav>

    <div class="container mt-3">
    <div class="card">
        <div class = "card-header">
             Event Form
        </div>
        <div class="card-body">
     <form action = "/authenticate/register" method = "POST">
                <div class="form-group">
            <label for="EventName">Event Organizer</label>
            <input type="EventName" class="form-control" id="EventName" name= "EventName" placeholder="Enter your own name or who is organizing the event" required>
                </div>

                <label for ="type">Select the Type of Event</label>
                <select id = "type" class = "form-control" id = "type" name = "type" required >
                <option> Fundraiser </option>
                <option> Natural Disaster </option>
                <option> Pandemic Relief</option>
                <option> Voulunteer Oppurtuinity</option>   
                </select>

                <label for="city">Locations City/Town</label>
            <input type="city" class="form-control" id="city" name = "city" placeholder= "Enter the City/Town" required>
               
                

                <label for ="state">Select State</label>
                <select id = "state" class = "form-control" id = "state" name = "state" required>
                <option> AL </option><option> AK </option><option> AZ </option><option> AR </option>
                <option> CA </option><option> CO </option><option> CT </option>
                <option> DE </option><option> FL </option><option> GA </option><option> HI </option>
                <option> ID </option><option> IL </option><option> IN </option><option> IA </option>
                <option> KS </option><option> KY </option><option> LA </option><option> ME </option>
                <option> MD </option><option> MD </option><option> MA </option><option> MI </option>
                <option> MN </option><option> MS </option><option> MO </option><option> MT </option>
                <option> NE </option><option> NV </option><option> NH </option><option> NY </option>
                <option> NC </option><option> ND </option><option> OH </option><option> OK </option>
                <option> OR </option><option> PA </option><option> RI </option><option> SC </option>
                <option> SD </option><option> TN </option><option> TX </option><option> UT </option>
                <option> VT </option><option> VA </option><option> WA </option><option> WV </option>
                <option> WI </option><option> WY </option>
                </select>
           

            <label for="zipcode">Enter Locations Zipcode</label>
            <input type="zipcode" class="form-control" id="zipcode" name = "zipcode" placeholder= "Enter the Locations Zipcode" required>
                </div>
            <button type="create" class="btn btn-primary">Create Event</button>
        </form>
             </div>
        </div>
    </div>         
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>  
